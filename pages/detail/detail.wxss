	color: #B4B4B4;
}

.talk {
	display: flex;
	justify-content: space-between;
	
}

.talk-lf {
	display: flex;
	align-items: center;
}

.talk-rg {
	/* margin-right: 26px; */
}

.talk-img {
	width: 15px;
	height: 15px;

}

.talk-img-rg {
	padding-left: 28rpx;
}

.talk-like {
	font-size: 9px;
	padding-left: 10rpx;
	color: #566B96;
}

.talk-font {
	display: flex;
	font-size: 12px;
	padding-top: 3px;
	flex-flow: column nowrap;
}

.talk-font-c {
	color: #4b4a4a;
}

.talk-comment {
	font-size: 10px;
	color: #566B96;
	text-align: right;
}

