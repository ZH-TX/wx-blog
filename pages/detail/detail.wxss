	justify-content: space-between;
	padding-top: 16px;

}

.font {
	font-size: 21px;
	
}

.content-img {
	width: 306rpx;
	height: 306rpx;
}

.tag-info {
	display: flex;
	justify-content: space-between;
	
}
.tag-info  text{
	text-decoration: underline;
}
.tag-info .tag-time{
	text-decoration: none;
}
