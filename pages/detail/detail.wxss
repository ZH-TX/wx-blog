}

.talk-info-img {
	width: 11px;
	height: 11px;
	margin: 3px 11px;
}

.send-change{
	display: flex;
	justify-content: space-between;

}
.comment{
	width: 608rpx;
}
.active-comment{
	width: 538rpx;

}
.comment-send-font{
	font-size: 20rpx;
	margin-right:20rpx ;
	height: 32rpx;
	background: #F3F5F5;
	border: 1px solid #F3F5F5;
	border-radius: 3px;
}
.add {
	position: fixed;
	right: 56rpx;
	bottom: 24rpx;
}

.add-img {
	width: 36px;
	height: 36px;
}

.content-text-tit {
	font-size: 15px;
	font-weight: 500;
	padding-top: 16px;
}

.content-acticle {
	overflow: hidden;
	text-overflow: ellipsis;
	display:-webkit-box;  
	-webkit-box-orient:vertical; 
	-webkit-line-clamp:2; 
	font-size: 12px;
	color: #898989;
}

.overflow-font{
	position: relative;
	width: 24px;
	margin-top: -18px;
	margin-left: 280px;
	font-size: 24rpx;
	color: rgb(64, 85, 128);
	background-image:-webkit-linear-gradient(top,hsla(0,0%,100%,.5),#fff);
	background-image:linear-gradient(180deg,hsla(0,0%,100%,.5),#fff);

}

