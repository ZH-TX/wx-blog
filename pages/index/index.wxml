
<!-- 头部 -->
<loading hidden="{{isRefresh}}">数据加载中</loading>
<view hidden="{{!isRefresh}}">
  	<view>
		<view class="header">
			<view class="header-left">
				<image hidden="{{isInput}}" class="header-img" src="/assets/img/page1/椭圆 1.png" mode="scaleToFill" />
