.header {
	position: fixed;
	height: 88rpx;
	top: 0;
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background: #FAF9F4;
}

.header-left{
	margin-left: 40rpx;
	display: flex;
	align-items: center;
}

.header-name{
	padding-left: 16rpx;
}
